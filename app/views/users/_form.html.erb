<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Nome %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :Email %>
    <%= form.text_field :email %>
  </div>
  <div class="field select">
    <strong>Tipo de usuário:</strong>
    <%= select(:user, :kind, [
      ['Assessor', 'member'],
      ['Diretor de GP', 'gp_director'],
      ['Diretor', 'director'],
      ['Diretor de Projeto', 'project_director'],
      ['Gerente de PMO', 'pmo_manager'],
      ['Gerente de celula', 'cell_manager']
    ]) %>
    <br/>
  </div>
  <div class="field">
    <strong>Célula:</strong>
    <%= select(:user, :cell_id, cells) %>
  </div>
  <div class="field">
    <strong>Diretoria:</strong>
    <%= select(:user, :directorship_id, dirs) %>
  </div>

  <div class="actions text-right">
    <%= form.submit "Editar usuário", class:"btn btn-primary btn-new-dir" %>
  </div>
<% end %>
