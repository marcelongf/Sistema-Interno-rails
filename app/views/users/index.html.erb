<div class="container container-img-footprint">
  <p id="notice"><%= notice %></p>

  <h1>Usu√°rio</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Kind</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.kind %></td>
          <td><%= link_to image_tag('show.svg'), user %></td>
          <td><%= link_to image_tag('edit.svg'), edit_user_path(user) %></td>
          <td><%= link_to image_tag('destroy.svg'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New User', new_user_path %>
</div>