<div class="container container-img-footprint">
  <p id="notice"><%= notice %></p>

  <h1 class="h1-users">Usu√°rio</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Tipo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.kind %></td>
          <td><%= link_to image_tag('show.svg'), user, class:"user-icon" %></td>
          <td><%= link_to image_tag('edit.svg'), edit_user_path(user), class:"user-icon" %></td>
          <td><%= link_to image_tag('destroy.svg'), user, method: :delete, data: { confirm: 'Deseja realmente excluir?' }, class:"user-icon" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="actions text-right">
    <%= link_to 'Salvar', new_user_path, class:"btn btn-primary btn-new-dir" %>
  </div>
</div>