<div class="container container-img-footprint">
    <%= link_to  image_tag('back.svg'), cell_path(:id => params[:id]) %>
    <h1 class="h1-new-cellgoal">Nova meta</h1>

    <%= form_tag create_cellgoal_path do %>
        <div class='field'>
            Titulo: <br> <%= text_field_tag :title %>
        </div>
        <div class='field'>
            Descrição: <br> <%= text_area_tag :description %>
        </div>

        <%= hidden_field_tag :status, false %>

        <%= hidden_field_tag :cell_id, @cell.id %>

        <div class="actions text-right">
            <%= submit_tag "Salvar", class:"btn btn-primary btn-new-dir"%>
        </div>
    <% end %>

    
</div>