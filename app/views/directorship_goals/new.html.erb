<div class="container container-img-footprint">
    <%= link_to image_tag("back.svg"), directorship_path(:id => params[:id]) %>
        <h1 class="h1-new-goal">Criar metas</h1>
    <%= form_tag create_directorshipgoal_path do %>
        <div class='field'>
            Titulo:<br><%= text_field_tag :title %>
        </div>
        <div class='field'>
            Descrição:<br><%= text_area_tag :description %>
        </div>

        <%= hidden_field_tag :status, false %>

        <%= hidden_field_tag :directorship_id, @directorship.id %>

        <div class='action text-right'>
            <%= submit_tag "Salvar", class:"btn btn-primary btn-new-dir btn-m"%>
        </div>
    <% end %>    
</div>