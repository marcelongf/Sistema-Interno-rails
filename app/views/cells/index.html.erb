<div class="container container-img-footprint">
  <p id="notice"><%= notice %></p>
  <h1 class="h1-cells">Células</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Gerente</th>
        <th>Diretoria</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cells.each do |cell| %>
        <tr>
          <td><%= cell.name %></td>
          <td><%= cell.manager %></td>
          <td><%= cell.directorship.name %></td>
          <td><%= link_to image_tag("show.svg"), cell, class: "cell-icon" %></td>
          <td><%= link_to image_tag("edit.svg"), edit_cell_path(cell), class: "cell-icon" %></td>
          <td><%= link_to image_tag("destroy.svg"), cell, method: :delete, data: { confirm: 'Deseja realmente excluir?' }, class: "cell-icon" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="actions text-right">
    <%= link_to 'Nova Célula', new_cell_path, class: 'btn btn-primary btn-new-dir' %>
  <div>
</div>

